{% extends 'base.html.twig' %}

{% block title %}CodePostal index{% endblock %}

{% block body %}
    <h1>CodePostal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code_postal in code_postals %}
            <tr>
                <td>{{ code_postal.id }}</td>
                <td>{{ code_postal.code }}</td>
                <td>
                    <a href="{{ path('code_postal_show', {'id': code_postal.id}) }}">show</a>
                    <a href="{{ path('code_postal_edit', {'id': code_postal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('code_postal_new') }}">Create new</a>
{% endblock %}
